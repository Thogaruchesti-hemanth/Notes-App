<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wish_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/wish_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Wish Title"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/wish_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wish_title"
            android:layout_alignStart="@id/wish_title"
            android:text="Wish Description"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/wish_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:text=" ★★★ "
            android:textColor="@color/priority_medium"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/wish_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wish_description"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:text="Created: 2025-03-05"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/wish_fulfilled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wish_priority"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:text="Fulfilled"
            android:textSize="14sp" />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>